// Place your key bindings in this file to overwrite the defaults
[
    { "key": "alt+cmd+shift+left",      "command": "workbench.action.previousEditor" },
    { "key": "alt+cmd+shift+right",     "command": "workbench.action.nextEditor" },
    { "key": "alt+cmd+shift+right",     "command": "workbench.action.terminal.focusNext",
                                            "when": "terminalFocus"},
    { "key": "alt+cmd+shift+left",      "command": "workbench.action.terminal.focusPrevious",
                                            "when": "terminalFocus"},
    { "key": "ctrl+`",                "command": "workbench.action.terminal.focus",
                                            "when": "editorTextFocus"},
    { "key": "ctrl+`",                "command": "workbench.action.focusActiveEditorGroup",
                                            "when": "terminalFocus"},
    { "key": "alt+`",                 "command": "workbench.action.terminal.toggleTerminal"}
]