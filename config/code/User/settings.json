// Place your settings in this file to overwrite the default settings
{
// window
    "window.nativeTabs": false,
    "window.zoomLevel": 0,

// explorer
    "explorer.confirmDelete": false,

// editor
    "editor.renderIndentGuides": true,
    "editor.rulers": [80, 120],
    "editor.minimap.enabled": true,

// extensions
    "extensions.autoUpdate": true,
    "extensions.ignoreRecommendations": true,

// search
    "search.exclude": {
            "**/node_modules": true,
            "**/bower_components": true,
            "**/*.beam": true,
            "**/_build": true,
            "**/deps": true,
            "**/rel": true
        },

// files
    "files.trimTrailingWhitespace": true,
    "files.associations": {
            "*.config": "erlang"
        },

// gitProjectManager
    "gitProjectManager.baseProjectsFolders": ["/Users/rui.coelho/Repos/"],
    "gitProjectManager.maxDepthRecursion": 1,
    "gitProjectManager.storeRepositoriesBetweenSessions": true,

// erlang
    "erlang.enableExperimentalAutoComplete": true,

// workbench
    "workbench.colorTheme": "Monokai",
    "workbench.panel.location": "bottom",
    "workbench.startupEditor": "newUntitledFile",

// terminal
// see http://www.growingwiththeweb.com/2017/03/mastering-vscodes-terminal.html
// see https://code.visualstudio.com/docs/editor/integrated-terminal
    "terminal.integrated.scrollback": 5000,
    "terminal.integrated.rightClickCopyPaste": true,

// media player
    "media.player": {
        "players": [
            {
                "name": "My VLC player",
                "type": "vlc",
                "port": 8080,
                "password": "I6UVBJliYE2cwLpL",
                "showAllPlaylists": true
            }
        ]
    },

// todo
    "todo-tree.regex":  "(TODO|FIXME)",
    "todo-tree.globs": ["!_build/**"],
    "todo-tree.flat": true,
    "todo-tree.expanded": true,

// gitlens
    "gitlens.gitExplorer.files.layout": "list",
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": true,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": true,
        "suppressShowKeyBindingsNotice": true,
        "suppressUpdateNotice": false,
        "suppressWelcomeNotice": true
    },
    "gitlens.keymap": "chorded"
}

