// Place your settings in this file to overwrite the default settings
{
// window
    "window.nativeTabs": false,
    "window.zoomLevel": 0,

// explorer
    "explorer.confirmDelete": false,

// editor
    "editor.renderIndentGuides": true,
    "editor.rulers": [80, 120],
    "editor.minimap.enabled": true,
    "editor.fontFamily": "Menlo, Fira Code, Monaco, 'Courier New', monospace",

// extensions
    "extensions.autoUpdate": true,
    "extensions.ignoreRecommendations": true,

// search
    "search.exclude": {
            "**/node_modules": true,
            "**/bower_components": true,
            "**/*.beam": true,
            "**/_build": true,
            "**/deps": true,
            "**/rel": true
        },

// files
    "files.trimTrailingWhitespace": true,
    "files.associations": {
            "*.config": "erlang"
        },

// breadcrumbs
    "breadcrumbs.enabled": true,

// git
    "git.confirmSync": false,

// telemetry
// see https://code.visualstudio.com/docs/supporting/FAQ#_how-to-disable-telemetry-reporting
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,

// workbench
    "workbench.colorTheme": "Monokai",
    "workbench.startupEditor": "newUntitledFile",

// terminal
// see http://www.growingwiththeweb.com/2017/03/mastering-vscodes-terminal.html
// see https://code.visualstudio.com/docs/editor/integrated-terminal
    "terminal.integrated.scrollback": 5000,

// ext gitProjectManager
    "gitProjectManager.baseProjectsFolders": ["/Users/rui.coelho/Repos/"],
    "gitProjectManager.maxDepthRecursion": 1,
    "gitProjectManager.storeRepositoriesBetweenSessions": true,

// ext erlang
    "erlang.codeLensEnabled": true,
    "erlang.verbose": false,

