path ENV['SSH_CONFIG']
profiles ENV['AWS_PROFILE']
regions ENV['AWS_REGION']

# See http://docs.aws.amazon.com/AWSRubySDK/latest/AWS/EC2/Instance.html
reject {|instance| !instance.tags['Name'].include?(ENV['EC2_TAG_NAME']) }
host_line <<END
Host <%= tags['Name'] %>
  HostName <%= public_ip_address %>
  IdentifyFile <%= ENV['AWS_KEY_PATH'] %>
  User <%= ENV['AWS_USER'] %>
END
